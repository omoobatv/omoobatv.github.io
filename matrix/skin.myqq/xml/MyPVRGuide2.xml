						<animation effect="fade" start="100" end="40" time="0" condition="!system.getbool(input.enablemouse)">Conditional</animation>
					</control>
				</control>
				<include content="SkyQ-KodiEditiontvinfobar"></include>
			</control>
			<!-- Add divider to tvg date and time top -->
      <control type="image">
