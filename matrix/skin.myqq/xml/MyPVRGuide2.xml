				<control type="group">
					<top>350</top>
					<depth>DepthContentPanel</depth>
					<control type="epggrid" id="10">
						<left>493</left>
						<top>0</top>
						<right>0</right>
						<bottom>0</bottom>
						<pagecontrol>60</pagecontrol>
						<scrolltime tween="quadratic" easing="out">300</scrolltime>
						<timeblocks>30</timeblocks>
						<rulerunit>6</rulerunit>
						<onleft>9000</onleft>
						<onright>60</onright>
						<onup>10</onup>
						<ondown>10</ondown>
						<viewtype label="19032">list</viewtype>
						<rulerlayout height="45" width="1400">
							<!-- main epg  date and programme time row -->
							<control type="label">
								<font>font30_regular</font>
								<textcolor>FFFFFFFF</textcolor>
								<width>580</width>
								<height>45</height>
