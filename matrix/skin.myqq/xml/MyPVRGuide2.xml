						<control type="label">
								<right>10</right>
								<top>0</top>
								<width>75</width>
								<height>90</height>
								<font>font27_narrow</font>
								<label>$INFO[ListItem.ChannelNumberLabel]</label>
								<align>right</align>
								<aligny>center</aligny>
							  <shadowcolor>text_shadow</shadowcolor>
							</control>
							<control type="label" id="1">
								<left>20</left>
								<top>0</top>
								<width>220</width>
								<height>90</height>
								<font>font27_narrow</font>
								<label>$INFO[ListItem.ChannelName]</label>
								<align>left</align>
								<aligny>center</aligny>
								<texture border="12" fallback="windows/pvr/epg-genres/192.png">$INFO[ListItem.Property(GenreType),windows/pvr/epg-genres/,.png]</texture>
							</control>
							<control type="image" id="2">
								<width>327</width>
								<height>90</height>
							</control>
						</channellayout>
						<focusedchannellayout height="90" width="325">
							<!-- Add menu select to channel name and number in main epg -->
							<control type="image" id="2">
							  <top>0</top>
								<width>327</width>
								<height>100</height>
								<texture>menuselect.png</texture>
								<texture border="12" colordiffuse="button_focus">windows/pvr/epg-genres/128.png</texture>
             </control>
						 <!-- Add channel number in main epg channel name hoover -->
						 <control type="label">
							 <right>10</right>
							 <top>0</top>
							 <height>90</height>
							 <width>75</width>
							 <align>right</align>
							 <aligny>center</aligny>
							 <font>font27_narrow</font>
							 <label>[B]$INFO[ListItem.ChannelNumberLabel][/B]</label>
							 <shadowcolor>text_shadow</shadowcolor>
							 </control>
							<control type="label" id="1">
								<left>20</left>
								<top>0</top>
								<width>220</width>
								<height>90</height>
								<font>font27_narrow</font>
               <label>[B]$INFO[ListItem.ChannelName][/B]</label>
								<align>left</align>
								<aligny>center</aligny>
								<texture border="3" fallback="windows/pvr/epg-genres/16.png">$INFO[ListItem.Property(GenreType),windows/pvr/epg-genres/,.png]</texture>
							</control>
             </focusedchannellayout>
						<itemlayout height="90" width="60">
             <control type="image" id="2">
								<width>58</width>
								<height>90</height>
								<top>0</top>
							<texture border="3" colordiffuse="button_focus">lightskyblue.png</texture>
