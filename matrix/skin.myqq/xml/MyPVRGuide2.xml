<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<backgroundcolor>background</backgroundcolor>
	<views>10</views>
	<menucontrol>9000</menucontrol>
	<controls>
		<include>DefaultBackground</include>
		<control type="image">
		<left>1524</left>
		<top>87</top>
